    {
        "name": "Footer",
        "class": "section-footer",
        "settings": [
            {
                "type": "header",
                "content": "Email signup"
            },
            {
                "type": "text",
                "id": "title",
                "label": "Title",
                "default": "Register now so you don't miss our programs"
            },
            {
                "type": "text",
                "id": "text_button",
                "label": "Text button",
                "default": "Subcribe Now"
            },
            {
                "type": "header",
                "content": "Quick link"
            },
            {
                "type": "link_list",
                "id": "menu",
                "default": "footer",
                "label": "Menu",
                "info": "Displays only top-level menu items."
            },
            {
                "type": "header",
                "content": "Social accounts"
            },
            {
                "type": "text",
                "id": "social_facebook_link",
                "label": "Facebook",
                "placeholder": "https:\/\/facebook.com\/shopify"
            },
            {
                "type": "text",
                "id": "social_twitter_link",
                "label": "Twitter",
                "placeholder": "hhttps:\/\/twiitter.com\/shopify"
            },
            {
                "type": "text",
                "id": "social_instagram_link",
                "label": "Instagram",
                "placeholder": "https:\/\/instagram.com\/shopify"
            },
            {
                "type": "text",
                "id": "social_youtube_link",
                "label": "Youtobe",
                "placeholder": "https:\/\/youtobe.com\/shopify"
            },
            {
                "type": "header",
                "content": "Copyright"
            },
            {
                "type": "image_picker",
                "id": "logo_footer",
                "label": "Logo Footer"
            },
            {
                "type": "range",
                "id": "logo_width",
                "min": 50,
                "max": 200,
                "step": 5,
                "default": 115,
                "unit": "px",
                "label": "Desktop logo width"
            }
        ]
    }
{% endschema %}