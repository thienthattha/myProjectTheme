{% if videoUrl != blank %}
    <div class="video">
        <button class="video__close button-icon">{% render 'icon-close' %}</button>
        {% if videoType == 'youtube' %}
            <iframe
              src="https://www.youtube.com/embed/{{ videoId }}?enablejsapi=1&autoplay=1{{ loop }}"
              class="js-youtube"
              allow="autoplay; encrypted-media"
              allowfullscreen
              title=""
            ></iframe>
        {% else %}
            <iframe
              src="https://player.vimeo.com/video/{{ videoId }}?autoplay=1{{ loop }}"
              class="js-vimeo"
              allow="autoplay; encrypted-media"
              allowfullscreen
              title=""
            ></iframe>
          {% endif %}
    </div>
{% endif %}